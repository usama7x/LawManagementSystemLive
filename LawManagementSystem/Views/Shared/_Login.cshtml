@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@inject SignInManager<AppUser> SignInManager;
@inject UserManager<AppUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <ul class="app-login-nav">
        <li class="nav-item">
            <a style="font-size: 20px;" class="nav-link text-light">welcome @UserManager.FindByEmailAsync(User.Identity.Name).Result.FirstName</a>
        </li>
        <li class="nav-item" style="margin-left: 15px">
            <form class="form-inline" asp-route-returnUrl="@Url.Page("/")"
                  method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    </ul>
}
else
{

    <ul class="navbar-nav app-login-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account"
               asp-action="Login"><button class="btn btn-light" type="button">Login</button></a>
        </li>
        <li class="nav-item" style="margin-left: 15px">
            <a class="nav-link text-dark" asp-controller="Account"
               asp-action="Register"><button class="btn btn-light" type="button">Register</button></a>
        </li>
    </ul>
} 