<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LawManagementSystem</title>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="images/favicon.ico">
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="stylesheet" href="~/css/slider.css">
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/css/style.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jquery.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/tms-0.4.1.js"></script>
    <link rel="stylesheet" href="~/css/customStyles.css" />



    <script>
        $(window).load(function () {
            $('.slider')._TMS({
                show: 0,
                pauseOnHover: false,
                prevBu: '.prev',
                nextBu: '.next',
                playBu: false,
                duration: 800,
                preset: 'fade',
                pagination: true, //'.pagination',true,'<ul></ul>'
                pagNums: false,
                slideshow: 8000,
                numStatus: false,
                banners: true,
                waitBannerAnimation: false,
                progressBar: false
            })
        });

    </script>
    <link rel="stylesheet" href="~/css/customStyles.css">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <link rel="stylesheet" media="screen" href="css/ie.css">
    <![endif]-->

</head>
<body style="background-color: black">
    <partial name="_Login">
        <header>
            <div class="container_12">
                <div class="grid_12">
                    @*<h1><a href="index.html"><img src="images/logo.png" alt=""></a> </h1>*@
                    <h2>Law ManageMent System</h2>
                    <div class="clear"></div>
                    <div class="menu_block">
                        <nav>
                            <ul class="sf-menu">
                                <li class="current"><a asp-controller="Home" asp-action="Index">HOME</a></li>
                                <li class="with_ul">
                                    <a asp-controller="Laws" asp-action="CreateLaw">Law Entry</a>
                                    @*<ul>
                                    <li><a href="#">History</a></li>
                                    <li><a href="#">News</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                </ul>*@
                                </li>
                                <li><a asp-controller="Lawyers" asp-action="Index">Lawyer Entry</a></li>
                                <li><a href="clients.html">Court Entry</a></li>
                                <li><a asp-controller="Case" asp-action="GetAll">Registered Cases</a></li>
                            </ul>
                        </nav>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </header>
        <div class="container" style="width: 100%">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <partial name="_CustomFooter">
            @RenderSection("Scripts", required: false)
</body>
</html>
