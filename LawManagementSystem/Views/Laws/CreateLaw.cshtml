
@{
    ViewData["Title"] = "CreateLaw";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Law</h1>

<div class="container contact-form">
    @*<div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>*@
    <form method="post" asp-controller="Laws" asp-action="CreateLaw">
        <h3>Create Law</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Law Name *" value="" />
                </div>
                <div class="form-group">
                    <input type="text" name="sectionNo" class="form-control" placeholder="Section No *" value="" />
                </div>
                <div class="form-group">
                    <input type="text" name="txtPhone" class="form-control" placeholder="Your Phone Number *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Create" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Law Description *" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>

