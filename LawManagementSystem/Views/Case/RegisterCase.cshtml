@model LawManagementSystem.Models.Case;
@{
    ViewData["Title"] = "RegisterCase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container contact-form" style="border-radius: 15px">
    @*<div class="contact-image">
            <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
        </div>*@
    <form method="post" asp-controller="Case" asp-action="RegisterCase">
        <h3>Register Case</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Type"></label>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<CaseType>()" class="form-control">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AppUser.PhoneNumber"></label>
                    <input type="text" name="contactNo" class="form-control" placeholder="Contact No *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" name="btnSubmit" class="btnContact" value="Register Case" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea name="details" class="form-control" placeholder="Case Details" style="width: 100%; height: 150px;"></textarea>
                </div>
            </div>
        </div>
    </form>
</div>
